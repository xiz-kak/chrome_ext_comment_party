{
  "name": "Comment party",
  "description": "Let's party",
  "version": "1.0",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://stats.pusher.com; object-src 'self'",
  "background": {
    "scripts": [
      "js/pusher.min.js",
      "src/background.js"
    ],
    "persistent": true
  },
  "permissions": [
      "tabs",
      "background",
      "http://*/*",
      "https://*/*",
      "storage"
  ],
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "/images/icon_solo_16.png",
      "32": "/images/icon_solo_32.png",
      "48": "/images/icon_solo_48.png",
      "128": "/images/icon_solo_128.png"
    }
  },
  "icons": {
    "16": "/images/icon_16.png",
    "32": "/images/icon_32.png",
    "48": "/images/icon_48.png",
    "128": "/images/icon_128.png"
  },
  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*" ],
      "js": ["js/anime.min.js", "src/contentScript.js"]
  }]
}
